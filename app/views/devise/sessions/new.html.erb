    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                 
                <div class="login-panel panel panel-default">
                    
                  <%= render 'layouts/messages' %>
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <form role="form">
                            <fieldset>
                                <div class="form-group input-group">
                                    <span class="input-group-addon"><i class="fa fa-at"></i></span>
                                    <%= f.email_field :email, placeholder: "E-mail", autofocus: true, class: "form-control" %>
                                </div>
                                <div class="form-group input-group">
                                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                     <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
                                </div>
                                <div class="hidden">
                                  <% if devise_mapping.rememberable? -%>
                                    <label>
                                        <%= f.check_box :remember_me %>Remember Me 
                                    </label>
                                </div>
                                <div class="form-group">
                                <%= button_tag type: 'submit', class: "btn btn-lg btn-primary btn-block", id: "login-button" do %>
                                <i class="fa fa-arrow-circle-right" aria-hidden="true"></i> Log In
                                <% end %>
                                
                                </div>
                                <% end %>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div> 
        </div>
    </div>
    <% end %>
