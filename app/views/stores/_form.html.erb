
<fieldset>

<%= form_for @store do |f| %>
    
    <div class="form-group">
    <%= f.text_field :storename, class: 'form-control', placeholder: "Store Name", autofocus: "true" %>
    </div>
    <div class="form-group">
    <%= f.text_field :storecode, class: 'form-control', placeholder: "Store Code" %>
    </div>
    <div class="form-group">
    <%= f.text_field :contactname, class: 'form-control', placeholder: "Store Contact" %>
    </div>
    <div class="form-group">
    <%= f.telephone_field :phonenumber, class: 'form-control', placeholder: "Contact Number" %>
    </div>
    <div class="form-group">
    <%= f.hidden_field :latitude, class: 'form-control', id: 'latitude' %>
    </div>
    <div class="form-group">
    <%= f.hidden_field :longitude, class: 'form-control', id: 'longitude' %>
    </div>
    <div class="form-group">
        
    <%= f.submit "Add Store", class: "btn btn-lg btn-success btn-block" %>
<% end %>
</fieldset>
