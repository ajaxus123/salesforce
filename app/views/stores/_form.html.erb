<fieldset>
    <%= form_for @store do |f| %>
        <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-toggle-on"></i></span>
        <%= f.text_field :storename, class: 'form-control', placeholder: "Store Name", autofocus: "true" %>
        </div>
        <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-toggle-on"></i></span>    
        <%= f.text_field :storecode, class: 'form-control', placeholder: "Store Code" %>
        </div>
        <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-toggle-on"></i></span>    
        <%= f.text_field :contactname, class: 'form-control', placeholder: "Store Contact" %>
        </div>
        <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-toggle-on"></i></span>    
        <%= f.telephone_field :phonenumber, class: 'form-control', placeholder: "Contact Number" %>
        </div>
        <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-toggle-on"></i></span>    
        <%= f.select :channel_id, Channel.all.map{ |f| [ f.name, f.id] }, {}, {class: 'form-control'} %>
        </div>
        <div class="form-group">
        <label>Don't worry about the address, we acquire it from your coordinates <i class="fa fa-smile-o" aria-hidden="true"></i></label>
        </div>
        <%= f.hidden_field :latitude, class: 'form-control', id: 'latitude' %>
        <%= f.hidden_field :longitude, class: 'form-control', id: 'longitude' %>
        <div class="form-group">
        <%= button_tag type: 'submit', class: "btn btn-lg btn-primary btn-block", id: "login-button" do %>
        <i class="fa fa-arrow-circle-right" aria-hidden="true"></i> Add Store
        <% end %>
        </div>
        <div class="form-group">
        <%= link_to dashboard_path, class: "btn btn-lg btn-primary btn-block" do %>
        <i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Cancel
        <% end %>        
        </div>
    <% end %>
</fieldset>
